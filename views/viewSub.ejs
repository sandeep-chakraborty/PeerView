<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Subjects</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 50px;
        }
        .container-md {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        h1 {
            margin-bottom: 30px;
            text-align: center;
        }
        .table {
            margin-top: 20px;
        }
        .footer {
            text-align: center;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="container-md mt-5">
        <h1 class="mb-4">View Subjects</h1>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Department</th>
                    <th scope="col">Subject Key</th>
                    <th scope="col">Subject Name</th>
                    <th scope="col">Actions</th> <!-- Added column for delete button -->
                </tr>
            </thead>
            <tbody>
                <% for (const [deptName, deptSubjects] of Object.entries(subjects)) { %>
                    <% for (const [subjectKey, subjectName] of Object.entries(deptSubjects)) { %>
                        <tr>
                            <td><%= deptName %></td>
                            <td><%= subjectKey %></td>
                            <td><%= subjectName %></td>
                            <td>
                                <!-- Form for subject deletion -->
                                <form action="/deleteSubject" method="post" onsubmit="return confirm('Are you sure you want to delete this subject?');">
                                    <input type="hidden" name="deptName" value="<%= deptName %>" />
                                    <input type="hidden" name="subjectKey" value="<%= subjectKey %>" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </table>
        <!-- Footer -->
    <div class="footer">
        Powered by SRPðŸš€
    </div>
    </div>

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    
</body>
</html>
