<!-- viewSub.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Subjects</title>
    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container-md {
            margin-top: 50px;
        }

        .table {
            font-size: 16px;
        }

        th, td {
            text-align: center;
            font-weight: bold;
        }

        thead {
            background-color: #007bff;
            color: white;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
            border: none;
        }

        .delete-btn:hover {
            background-color: #c82333;
        }
    </style>
</head>

<body>
    <div class="container-md mt-5">
        <h1 class="text-center mb-4">View Subjects</h1>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Department</th>
                    <th scope="col">Subject Key</th>
                    <th scope="col">Subject Name</th>
                    <th scope="col">Actions</th> <!-- Added column for delete button -->
                </tr>
            </thead>
            <tbody>
                <% for (const [deptName, deptSubjects] of Object.entries(subjects)) { %>
                    <% for (const [subjectKey, subjectName] of Object.entries(deptSubjects)) { %>
                        <tr>
                            <td><%= deptName %></td>
                            <td><%= subjectKey %></td>
                            <td><%= subjectName %></td>
                            <td>
                                <!-- Form for subject deletion -->
                                <form action="/deleteSubject" method="post" onsubmit="return confirm('Are you sure you want to delete this subject?');">
                                    <input type="hidden" name="deptName" value="<%= deptName %>" />
                                    <input type="hidden" name="subjectKey" value="<%= subjectKey %>" />
                                    <button type="submit" class="btn delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
