<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Streams</title>
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css"
    rel="stylesheet"
/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 50px;
        }
        .container {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
        }
        h1 {
            margin-bottom: 30px;
            text-align: center;
        }
        .table {
            margin-top: 20px;
        }
        .footer {
            text-align: center;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Streams:</h1>
        <button id="refreshButton" class="btn btn-primary m-3 float-right"><i class="ri-refresh-line"></i> Refresh this page</button>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Stream Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% streams.forEach(function(stream) { %>
                    <tr>
                        <td><%= stream %></td>
                        <td>
                            <form id="deleteForm_<%= stream %>" action="/stream/<%= stream %>" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="button" onclick="deleteStream('<%= stream %>')" class="btn btn-danger"><i class="ri-close-circle-line p-1"></i>Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div class="footer">
            Powered by SRPðŸš€
        </div>
    </div>

    <!-- Include Axios library -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        function deleteStream(streamName) {
        // Ask for confirmation before deleting
        if (confirm("Are you sure you want to delete this stream?")) {
            // If user confirms, send a DELETE request using Axios
            axios.delete('/stream/' + streamName)
                .then(function (response) {
                    // Check if the response status is OK (200)
                    if (response.status >= 200 && response.status < 300) {
                        // Handle success, e.g., display a success message
                        console.log('Stream deleted successfully.');
                        alert('Stream deleted successfully.');
                        // Reload the page
                        window.location.reload();
                    } else {
                        // If the response status is not within the successful range, display an error message
                        console.error('Error deleting stream. Status:', response.status);
                        alert('Error deleting stream. Status: ' + response.status);
                    }
                })
                .catch(function (error) {
                    // Ignore the error when deletion is successful
                    if (error.response) {
                        console.error('Error deleting stream:', error.response);
                        alert('An error occurred while deleting the stream. Please try again.');
                    }
                });
        } else {
            // If user cancels the deletion, do nothing
            console.log('Deletion canceled.');
        }
    }

    document.getElementById("refreshButton").addEventListener("click", function() {
        location.reload(); // Reload the page
    });
    </script>
</body>
</html>
